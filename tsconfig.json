{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@api": ["./src/api"],
      "@providers": ["./src/providers"],
      "@providers/*": ["./src/providers/*"],
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"],
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"]
    }
  },
  "include": [
    "src"
  ]
}
